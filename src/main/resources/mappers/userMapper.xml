<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.ham.sns.user.repository.UserRepository">
	
	<insert id="insertUser" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			, `email`
			, `name`
			, `password`
			, `phoneNumber`
		)
		VALUE
		(
			#{loginId}
			, #{email}
			, #{name}
			, #{password}
			, #{phoneNumber}
		)
	</insert>
	
	<select id="selectCountId" parameterType="string" resultType="int">
		SELECT 
			count(1)
		FROM 
			`user`
		WHERE 
			`loginId` = #{loginId}
	</select>
	
	<select id="selectUserByLoginIdAndPassword" parameterType="map"
	resultType="com.ham.sns.user.domain.User">
		SELECT
				`id`
				, `loginId`
				, `email`
				, `name`
				, `password`
				, `phoneNumber`
				, `createdAt`
				, `updatedAt`
			FROM
				`user`
			WHERE
				`loginId` = #{loginId}
				AND  `password` = #{password}
		</select>
	
	<select id="selectUser" parameterType="int"
	resultType="com.ham.sns.user.domain.User">
		SELECT
				`id`
				, `loginId`
				, `email`
				, `name`
				, `password`
				, `phoneNumber`
				, `createdAt`
				, `updatedAt`
			FROM
				`user`
			WHERE
				`id` = #{id}
	</select>
</mapper>